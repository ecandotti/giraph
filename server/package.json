{
  "name": "server",
  "version": "1.0.0",
  "description": "Server part of Giraph",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "production": "NODE_ENV=production node dist/index.js",
    "staging": "NODE_ENV=staging node dist/index.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "render:build": "yarn install && yarn build",
    "clean": "rimraf dist/",
    "copy-html": "copyfiles -F src/**/*.twig dist/",
    "copy-png": "copyfiles -F src/**/*.png dist/",
    "build": "yarn clean && tsc && tsc-alias && yarn copy-html && yarn copy-png && yarn prisma:generate && yarn prisma:deploy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^9.17.2",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.1",
    "prisma": "^4.11.0",
    "twig": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/nodemailer": "^6.4.7",
    "@types/twig": "^1.12.9",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
